module main

imports

  signatures/lib/start-sig
  
  statics/access
  statics/base
  statics/modules
  statics/options

rules

  // No injection explication for top-level sort `Start`.
  programOk : Program
  programOk(Program(EM, ER, LI, MProt, MPriv, prog)) :- {s}
    new s,
    !thisMod[s] in s,

    exposureModeOk(s, EM),
    exposureRangeOk(s, ER),

    lexicalInternalOk(s, LI),
    memberProtectedOk(s, MProt),
    memberPrivateOk(s, MPriv),

    moduleElemsOk(s, prog).
