module statics/base

imports signatures/lib/start-sig

signature

  name-resolution
	labels
	  LEX 					// lexical parent
	  IMPORT 				// import
	  EXTEND				// extends
	  EXTEND_PROT			// extends with protected visibility
	  EXTEND_PRIV			// extends with private visibility

  sorts TYPE constructors
    INT		: TYPE
    CLASS 	: scope -> TYPE

  constructors
    Local : AccessModifier // local variables.

  sorts ACCESS constructors
    ACCESS : AccessModifier -> ACCESS
