module lib/main

imports

  strategolib

  signatures/lib/start-sig

rules

  desugar :: TP

  desugar = desugar-access-mod

  desugar-access-mod :: TP

  desugar-access-mod: ProtectedInternalSelf()        -> ProtectedInternal(MRLNonEmpty(MRLItem(Self())))
  desugar-access-mod: ProtectedInternal(MRLEmpty())  -> ProtectedInternal(MRLNonEmpty(MRLItem(Self())))

  desugar-access-mod: PrivateProtectedSelf()         -> PrivateProtected(MRLNonEmpty(MRLItem(Self())))
  desugar-access-mod: PrivateProtected(MRLEmpty())   -> PrivateProtected(MRLNonEmpty(MRLItem(Self())))

  desugar-access-mod: InternalSelf()                 -> Internal(MRLNonEmpty(MRLItem(Self())))
  desugar-access-mod: Internal(MRLEmpty())           -> Internal(MRLNonEmpty(MRLItem(Self())))


  desugar-all :: TP
  desugar-all = topdown(try(preserve-annos(desugar)))
